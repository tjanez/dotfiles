{
    // Display horizontal vertical lines.
    "editor.rulers": [
        72,
        79,
        99,
        119
    ],
    "editor.renderIndentGuides": true,
    "files.autoSave": "afterDelay",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    // Use Python 3.
    "python.pythonPath": "python3",
    "python.linting.pep8Enabled": true,
    "python.linting.pep8Path": "pycodestyle-3",
    "python.linting.pydocstyleEnabled": true,
    "python.linting.pylintPath": "pylint-3",
    // Files to exclude by default.
    "files.exclude": {
        "**/.git": true,
        ".idea": true,
        "**/*.pyc": true,
        "**/__pycache__": true,
        ".tox/**": true,
        "build": true,
        "dist": true,
        "*.egg-info": true,
        "htmlcov": true,
        ".vscode": true
    },
    // Install Python language server.
    // More info at: https://github.com/Microsoft/vscode-python/issues/2177.
    "python.jediEnabled": false,
    // Set default zoom level.
    "window.zoomLevel": 0
}
